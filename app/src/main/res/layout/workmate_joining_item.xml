<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workmateJoiningItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="@dimen/small_content_margin"
    android:orientation="vertical"
    tools:showIn="@layout/activity_place_detail_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/workmateJoiningPicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Widget.App.ShapeableImageView.Circular"
        app:strokeColor="@color/lightGrey"
        app:strokeWidth="1dp"
        tools:src="@drawable/blank_profile" />

    <TextView
        android:id="@+id/workmateJoiningText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_content_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/workmateJoiningPicture"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Scarlett is joining!" />

</androidx.constraintlayout.widget.ConstraintLayout>