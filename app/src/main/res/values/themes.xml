<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Go4Lunch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/red</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorOnSurface">@color/red</item>
    </style>

    <style name="ThemeOverlay.App.NavigationView" parent="">
        <item name="colorSurface">@color/orange</item>
        <item name="colorSurfaceContainerLow">@color/orange</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorOnSurfaceVariant">@color/red</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="Theme.Go4Lunch" parent="Base.Theme.Go4Lunch" />

    <style name="Theme.Go4Lunch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Go4Lunch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>